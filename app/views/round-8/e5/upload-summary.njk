{% extends "layouts/main.html" %}

{% block pageTitle %}
  Content page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}

<div class="govuk-!-padding-bottom-4"></div>

{{ govukBackLink({
  text: "Back",
  href: "javascript:window.history.back()"
}) }}

{% endblock %}

{% block content %}

<h1 class="govuk-heading-xl">Check your files</h1>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-m">Bank statement for Employment and Support Allowance (ESA)</h2>

    <dl class="govuk-summary-list">
        {% for item in data.benefits %}
        {% if item.name === data.yourBenefits %}
        {% for item in item.files %}
      <div class="govuk-summary-list__row">

          <dt class="govuk-summary-list__key">
          File {{ loop.index }}
        </dt>
        <dd class="govuk-summary-list__value">
          <a download href="/" class="govuk-link">{{item}}</a>
        </dd>
        <dd class="govuk-summary-list__actions">

          <a class="govuk-link" href="#">Remove<span class="govuk-visually-hidden"> file 2</span></a>

        </dd>
      </div>
      {% endfor %}
      {% endif %}
      {% endfor %}
    </dl>
  </div>
</div>


{% from "govuk/components/button/macro.njk" import govukButton %}

<div class="govuk-button-group">
    {{ govukButton({
        text: "Continue",
        href: "declaration.html",
        preventDoubleClick: true
        }) }}

  </div>




{% endblock %}
