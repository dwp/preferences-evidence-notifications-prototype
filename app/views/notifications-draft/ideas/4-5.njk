                      <!-- filter options -->
                      <div class="moj-filter__options">
                        <h2 class="govuk-heading-m">Filter</h2>

                          <!-- filter by read status -->
                          <div class="govuk-form-group">
                            <fieldset class="govuk-fieldset">
                              <div class="govuk-radios govuk-radios--small" data-module="govuk-radios">
                                <div class="govuk-radios__item">
                                  <input class="govuk-radios__input" id="changedRead" name="changedRead" type="radio" value="all">
                                  <label class="govuk-label govuk-radios__label" for="changedRead">
                                    All notifications
                                  </label>
                                </div>
                                <div class="govuk-radios__item">
                                  <input class="govuk-radios__input" id="changedRead" name="changedRead" type="radio" value="read">
                                  <label class="govuk-label govuk-radios__label" for="changedRead">
                                    Read
                                  </label>
                                </div>
                                <div class="govuk-radios__item">
                                  <input class="govuk-radios__input" id="changedRead" name="changedRead" type="radio" value="unread">
                                  <label class="govuk-label govuk-radios__label" for="changedRead">
                                    Unread
                                  </label>
                                </div>
                              </div>
                            </fieldset>
                          </div>

                        <div class="moj-datepicker" data-module="moj-date-picker">
      
                          <div class="govuk-form-group">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                              Start date
                          </legend> 
                        
                            <div id="date-hint" class="govuk-hint">
                              For example, 17/5/2024.
                            </div>
                        
                            <input class="govuk-input moj-js-datepicker-input " id="date" name="date" type="text" aria-describedby="date-hint" autocomplete="off">
                        
                          </div>
                        
                        </div>
                        
                        <div class="govuk-!-padding-bottom-6"></div>
      
                          <!-- filter by benefits -->
