{% extends "layouts/main.html" %}
{%- from "govuk/components/tag/macro.njk" import govukTag -%}

{% block pageTitle %}
  Content page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}
  {% include "preferences/breadcrumbs/customer-view/preferred-language.html" %}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">

  <fieldset class="govuk-fieldset">
    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
      <h1 class="govuk-fieldset__heading">
        Confirm your changes
      </h1>
    </legend>
  </fieldset>

<div class="govuk-!-padding-bottom-3"></div>  

<form action="/preferences/customer-view/textphone/confirm-your-changes" method="post" novalidate>
{{ govukTable({
  name: "SelectTextphone",
  captionClasses: "govuk-table__caption--m",
  firstCellIsHeader: true,
  rows: [
    [
      {
        text: "Textphone"
      },
      {
        text: data.SelectTextphone
      }
    ]
  ]
}) }}


<div class="govuk-inset-text">
  We will also make textphone your preference for how we speak to you to reflect your alternative format needs.
</div>


<div class="govuk-button-group">
  {{ govukButton({
    text: "Continue"
  }) }}

  <p class="govuk-body">
    <a href="/preferences/customer-view/textphone/abandon-journey.html" class="govuk-link">Cancel</a>
  </p>

</div>
  
  
</form>

</div>
</div>

{% endblock %}
