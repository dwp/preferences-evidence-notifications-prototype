{% extends "layouts/main.html" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
  Content page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}
  {% include "preferences/breadcrumbs/customer-view/how-we-write-to-you.html" %}
{% endblock %}

{% block content %}

  <form action="/preferences/customer-view/textphone/confirm-your-changes" method="post" novalidate>
    {{ govukRadios({
      classes: "govuk-radios--inline",
      name: "SelectTextphone",
      fieldset: {
        legend: {
          text: "Do you want us to speak to you by textphone?",
          isPageHeading: true,
          classes: "govuk-fieldset__legend--l"
        }
      },
      hint: {
        text: "This is an alternative format to help meet the needs of those who are deaf or hard of hearing. This includes Relay UK."
      },
    items: [
      {
        value: "I need a textphone for deaf and hard of hearing",
        text: "Yes"
      },
      {
        value: "I do not need a textphone",
        text: "No"
      }
    ]
    })  
  }}

    {{ govukButton({
      text: "Continue"
    }) }}
  </form>

{% endblock %}