{% extends "layouts/main.html" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
Content page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}

{% include "preferences/breadcrumbs/customer-view/how-we-speak-to-you.html" %}

{% endblock %}

{% block content %}



<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <div class="govuk-notification-banner govuk-notification-banner--success" role="region"
      aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
      <div class="govuk-notification-banner__header">
        <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
          Success
        </h2>
      </div>
      <div class="govuk-notification-banner__content">
        <h3 class="govuk-notification-banner__heading">
          Textphone update complete
        </h3>
        <p class="govuk-body">You have successfully changed your textphone number.</p>
      </div>
    </div>

    <fieldset class="govuk-fieldset">
      <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">

        <h1 class="govuk-fieldset__heading">
          Changes made
        </h1>
      </legend>
    </fieldset>


    {%- from "govuk/components/tag/macro.njk" import govukTag -%}




    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Textphone number
        </dt>
        <dd class="govuk-summary-list__value">
          <p> {{ data.ConfirmedTextphoneNumber }} </p>
        </dd>
      </div>
    </dl>


    {% from "govuk/components/button/macro.njk" import govukButton %}

      <div class="govuk-button-group">
        <button type="submit" class="govuk-button govuk-button--secondary" onclick="onClick()" >Return to 'How we contact you'</button>
      </div>
    <script>
      function onClick() {
        window.location.href="/preferences/customer-view/how-we-contact-you-reset"
      }
    </script>
  </div>

</div>

{% endblock %}