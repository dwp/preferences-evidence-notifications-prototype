{% extends "layouts/main.html" %}

{% block pageTitle %}
  Content page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}


{% block beforeContent %}

{% include "preferences/breadcrumbs/customer-view/audio.html" %}

{% endblock %}

{% block content %}

<form action="/preferences/customer-view/alternative-formats/when-we-write-to-you/audio" method="post" novalidate>
  {{ govukRadios({
        name: "Audio",
        fieldset: {
          legend: {
            text: "What type of audio do you need?",
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        items: [
          {
            value: "CD",
            text: "CD"
          },
          {
            value: "MP3 file",
            text: "MP3 file"
          },
          {
            value: "Cassette tape",
            text: "Cassette tape"
          },
          {
            value: "DVD",
            text: "DVD"
          }
        ]
        })  
      }}

      {{ govukButton({
        text: "Continue"
      }) }}
</form>

{% endblock %}