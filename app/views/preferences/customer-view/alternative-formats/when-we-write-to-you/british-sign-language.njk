{% block content %}


<form class="form" id="radioForm" action="/preferences/customer-view/alternative-formats/when-we-write-to-you/britishsignlanguage" method="post" novalidate>

    {{ govukRadios({
        name: "BritishSignLanguage",
        fieldset: {
          legend: {
            text: "What video format do you need?",
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        hint: {
              text: "This is not a live interpreting service. You will get a video of the content in British Sign Language, with subtitles."
        },
        items: [
          {
            value: "DVD",
            text: "DVD"
          },
          {
            value: "MPEG file",
            text: "MPEG file"
          }
        ]
        })  
      }}

      {{ govukButton({
      text: "Continue"
    }) }}
</form>

