{% extends "layouts/main.html" %}

{% block pageTitle %}
  Content page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}

{% include "round-5/breadcrumbs/customer-view/1i/email.html" %}


{% endblock %}


{% block content %}


<div class="govuk-width-container">
  <main class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Email addresses</h1>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">

          <div class="govuk-summary-list__row">
            <dd class="govuk-summary-list__value">
            <p class="govuk-body" id="newEmailDiv" name="newEmailDiv"></p>
            </dd>
            <dd class="govuk-summary-list__actions">
              <ul class="govuk-summary-list__actions-list">
                <li class="govuk-summary-list__actions-list-item">
                  <a class="govuk-link" href="enter-your-new-email-address">Change<span class="govuk-visually-hidden"> change email</span></a>
                </li>
                <li class="govuk-summary-list__actions-list-item">
                  <a class="govuk-link" href="remove-email">Remove<span class="govuk-visually-hidden"> remove email</span></a>
                </li>
              </ul>
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dd class="govuk-summary-list__value">
              <p class="govuk-body">sarah.lee@email.com</p>
            </dd>
            <dd class="govuk-summary-list__actions">
              <ul class="govuk-summary-list__actions-list">
                <li class="govuk-summary-list__actions-list-item">
                  <a class="govuk-link" href="#">Change<span class="govuk-visually-hidden"> change email</span></a>
                </li>
                <li class="govuk-summary-list__actions-list-item">
                  <a class="govuk-link" href="#">Remove<span class="govuk-visually-hidden"> remove email</span></a>
                </li>
              </ul>
            </dd>
          </div>

        </dl>

        <div class="govuk-button-group">
          {{ govukButton({
            text: "Return",
            href: "/round-5/customer-view/1i/how-we-contact-you.html"
          }) }}
        </div>

      </div>
    </div>
  </main>
</div>


</div>

<script>
  var email = sessionStorage.getItem('email');

var newEmailDiv = document.getElementById('newEmailDiv');

if (newEmailDiv) {
  if(email) {
    newEmailDiv.innerHTML = email;
  } else {
    newEmailDiv.innerHTML = "sarah.phillips@example.com";
  }
}
</script>

{% endblock %}