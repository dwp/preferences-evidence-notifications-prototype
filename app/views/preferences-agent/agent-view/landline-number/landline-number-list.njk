{% extends "layouts/main.html" %}

{% block pageTitle %}
  Content page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}

{% include "preferences-agent/breadcrumbs/agent-view/landline-number-singular.html" %}


{% endblock %}


{% block content %}

<div class="govuk-width-container">
  <main class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Landline phone number</h1>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">

          <div class="govuk-summary-list__row">
            <dd class="govuk-summary-list__value">
              <p class="govuk-body" id="mainLandlineDiv" name="mainLandlineDiv"></p>
            </dd>
            <dd class="govuk-summary-list__actions">
              <ul class="govuk-summary-list__actions-list">
                <li class="govuk-summary-list__actions-list-item">
                  <a class="govuk-link" href="landline-number">Change<span class="govuk-visually-hidden"> change landline phone number</span></a>
                </li>
                <li class="govuk-summary-list__actions-list-item">
                  <a class="govuk-link" href="remove-number">Remove<span class="govuk-visually-hidden"> remove landline phone number</span></a>
                </li>
              </ul>
            </dd>
          </div>
          
        </dl>

      </div>
    </div>
  </main>
</div>


<script>
  var landline = sessionStorage.getItem('landline');
  var mainLandlineDiv = document.getElementById('mainLandlineDiv');
  if (mainLandlineDiv) {
    if(landline) {
      mainLandlineDiv.innerHTML = landline;
    } else {
      mainLandlineDiv.innerHTML = "01632 960 001";
    }
  }
</script>

{% endblock %}