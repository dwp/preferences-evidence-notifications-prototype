{% extends "layouts/main.html" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
  Content page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}
  {% include "preferences-agent/breadcrumbs/agent-view/how-we-write-to-you.html" %}
{% endblock %}

{% block content %}

{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

<div class="govuk-error-summary" data-module="govuk-error-summary">
  <div role="alert">
    <h2 class="govuk-error-summary__title">
      There is a problem
    </h2>
    <div class="govuk-error-summary__body">
      <ul class="govuk-list govuk-error-summary__list">
        <li>
          <a href="#select-language">Select which language we should write to you in</a>
        </li>
      </ul>
    </div>
  </div>
</div>


  <form action="/preferences-agent/agent-view/language/language-selection" method="post" novalidate>
    {{ govukRadios({
      name: "SelectLanguage",
      fieldset: {
        legend: {
          text: "Which language should we write to you in?",
          isPageHeading: true,
          classes: "govuk-fieldset__legend--l"
        }
    },
    errorMessage: {
      text: "Select which language we should write to you in"
    },
    items: [
      {
        value: "English",
        text: "English"
      },
      {
        value: "Welsh",
        text: "Welsh"
      }
    ]
    })  
  }}

    {{ govukButton({
      text: "Continue"
    }) }}
  </form>

{% endblock %}