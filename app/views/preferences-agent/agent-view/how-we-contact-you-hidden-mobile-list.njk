{% extends "layouts/main.html" %}

{% block pageTitle %}
  Content page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}

{% include "preferences-agent/breadcrumbs/agent-view/phone-number.html" %}


{% endblock %}


{% block content %}

<div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Mobile phone numbers</h1>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Mobile phone 1
            </dt>
            <dd class="govuk-summary-list__value">
              <p class="govuk-body"><a href="#" class="govuk-link" id="obfuscatedMobile1" onclick='testFunction(event, "obfuscatedMobile1")'>07*** *** 457</a></p>
            </dd>
            <dd class="govuk-summary-list__actions">
              <ul class="govuk-summary-list__actions-list">
                <li class="govuk-summary-list__actions-list-item">
                  <a class="govuk-link" href="#">Change<span class="govuk-visually-hidden"> change mobile phone number</span></a>
                </li>
                <li class="govuk-summary-list__actions-list-item">
                  <a class="govuk-link" href="#">Remove<span class="govuk-visually-hidden"> remove mobile phone number</span></a>
                </li>
              </ul>
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Mobile phone 2
            </dt>
            <dd class="govuk-summary-list__value">
              <p class="govuk-body"><a href="#" class="govuk-link" id="obfuscatedMobile2" onclick='testFunction(event, "obfuscatedMobile2")'>07*** *** 982</a></p>
            </dd>
            <dd class="govuk-summary-list__actions">
              <ul class="govuk-summary-list__actions-list">
                <li class="govuk-summary-list__actions-list-item">
                  <a class="govuk-link" href="#">Change<span class="govuk-visually-hidden"> change mobile phone number</span></a>
                </li>
                <li class="govuk-summary-list__actions-list-item">
                  <a class="govuk-link" href="#">Remove<span class="govuk-visually-hidden"> remove mobile phone number</span></a>
                </li>
              </ul>
            </dd>
          </div>
          
        </dl>

      </div>
    </div>
</div>

<script>


function testFunction(event, id) {

event.preventDefault()

var dataToUnobfuscate = document.getElementById(id);

switch(id) {
    case "obfuscatedMobile1":
    dataToUnobfuscate.innerHTML = "07123 456 457"
    break;
  case "obfuscatedMobile2":
    dataToUnobfuscate.innerHTML = "07999 999 982"
    break;
  default:
    return;
}
}


  var phone = sessionStorage.getItem('phone');
  var mainPhoneDiv = document.getElementById('mainPhoneDiv');
  if (mainPhoneDiv) {
    if(phone) {
      mainPhoneDiv.innerHTML = phone;
    } else {
      mainPhoneDiv.innerHTML = "07700 900 457";
    }
  }
</script>

{% endblock %}