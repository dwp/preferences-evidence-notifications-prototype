{% extends "layouts/main.html" %}

{% block pageTitle %}
  Content page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}

<div class="govuk-!-padding-bottom-4"></div>

{{ govukBackLink({
  text: "Back",
  href: "javascript:window.history.back()"
}) }}

{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form class="form" action="upload-evidence-type" method="post">

          {{ govukRadios({
              name: "evidenceType",
              fieldset: {
                legend: {
                  text: "What evidence are you sending?",
                  isPageHeading: true,
                  classes: "govuk-fieldset__legend--l"
                }
              },
              hint: {
                text: "If you need to upload multiple evidence types, you will need to repeat this process for each type."
              },
            items: [

              {
                value: "Bank statement",
                text: "Bank statement"
              },
              {
                value: "Payslip",
                text: "Payslip"
              },
              {
                value: "P60",
                text: "P60"
              },
              {
                divider: "or"
              },
              {
                value: "na",
                text: "The evidence I want to upload is not in the list"
              }
            ]

          })}}
                

        {{ govukButton({
          text: "Continue"
        }) }}

      </form>

    </div>
  </div>

