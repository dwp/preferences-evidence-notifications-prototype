{% extends "layouts/main.html" %}

{% block pageTitle %}
  Personal details
{% endblock %}

{% block header %}
  {% include "round-3/components/key-details.html" %}
{% endblock %}


{% block beforeContent %}

{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}

{{ govukPhaseBanner({
  tag: {
    text: "Prototype"
  },
  html: 'This is a prototype of a new service. None of your data will be stored from this test'
}) }}


{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{{ govukBreadcrumbs({
  items: [
    {
      text: "Home",
      href: "homepage.html"
    },
    {
      text: "Personal details",
      href: "#"
    }
  ]
}) }}
{% endblock %}


{% block content %}

<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h1 class="govuk-heading-l">Personal details</h1>
      <dl class="govuk-summary-list govuk-!-margin-bottom-9">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Name
          </dt>
          <dd class="govuk-summary-list__value">
            Christopher Fox
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Date of birth
          </dt>
          <dd class="govuk-summary-list__value">
            15 October 1977
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            National Insurance Number
          </dt>
          <dd class="govuk-summary-list__value">
            QQ 12 34 56 Q
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Nationality
          </dt>
          <dd class="govuk-summary-list__value">
            British
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Home address
          </dt>
          <dd class="govuk-summary-list__value">
            5 Highfield Av<br>
            Meltham<br>
            Holmfirth<br>
            HD9 5RF
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Benefits Christopher Fox gets
          </dt>
          <dd class="govuk-summary-list__value">
            <p class="govuk-body">Carer's Allowance (CA)</p>
            <p class="govuk-body">Employment and Support Allowance (ESA)</p>
            <p class="govuk-body">Personal Independence Payment (PIP)</p>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>

  <div class="govuk-button-group">
    {{ govukButton({
      text: "Return to home",
      href: "/round-4/colleague-view/2d/personal-details.html"
    }) }}
  </div>
</div>

<script>
var address = sessionStorage.getItem('address');

var newAddressDiv = document.getElementById('newAddressDiv');

if (newAddressDiv) {
  if(address) {
    newAddressDiv.innerHTML = address.replace(/,/g, '<br>');
  } else {
    newAddressDiv.innerHTML = "Same as home address";
  }
}

var phone = sessionStorage.getItem('phone');
var mainPhoneDiv = document.getElementById('mainPhoneDiv');
if (mainPhoneDiv) {
  if(phone) {
    mainPhoneDiv.innerHTML = phone;
  } else {
    mainPhoneDiv.innerHTML = "07700 900 457";
  }
}
</script>


{% endblock %}