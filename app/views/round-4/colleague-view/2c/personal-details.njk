{% extends "layouts/main.html" %}

{% block pageTitle %}
  Personal details
{% endblock %}

{% block header %}
  {% include "round-3/components/key-details.html" %}
{% endblock %}


{% block beforeContent %}

{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}

{{ govukPhaseBanner({
  tag: {
    text: "Prototype"
  },
  html: 'This is a prototype of a new service. None of your data will be stored from this test'
}) }}


{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{{ govukBreadcrumbs({
  items: [
    {
      text: "Home",
      href: "homepage.html"
    },
    {
      text: "Personal details",
      href: "#"
    }
  ]
}) }}
{% endblock %}


{% block content %}

<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h1 class="govuk-heading-l">View personal details</h1>
      <dl class="govuk-summary-list govuk-!-margin-bottom-9">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Name
          </dt>
          <dd class="govuk-summary-list__value">
            Christopher Fox
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Date of birth
          </dt>
          <dd class="govuk-summary-list__value">
            15 October 1977
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            National Insurance Number
          </dt>
          <dd class="govuk-summary-list__value">
            QQ 12 34 56 Q
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Nationality
          </dt>
          <dd class="govuk-summary-list__value">
            British
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Home address
          </dt>
          <dd class="govuk-summary-list__value">
            5 Highfield Av<br>
            Meltham<br>
            Holmfirth<br>
            HD9 5RF
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Benefits Christopher Fox gets
          </dt>
          <dd class="govuk-summary-list__value">
            <p class="govuk-body">Carer's Allowance (CA)</p>
            <p class="govuk-body">Employment and Support Allowance (ESA)</p>
            <p class="govuk-body">Personal Independence Payment (PIP)</p>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>

<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h1 class="govuk-heading-l">View or change how we contact them</h1>
      <dl class="govuk-summary-list govuk-!-margin-bottom-9">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Email
          </dt>
          <dd class="govuk-summary-list__value">
            christopher.fox@example.com
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="#">Change<span class="govuk-visually-hidden"> email</span></a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Address we send letters to	
          </dt>
          <dd class="govuk-summary-list__value">
            Same as home address	
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="address-we-send-letters-to/which-address-should-we-send-letters-to">Change<span class="govuk-visually-hidden"> email</span></a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Main phone number
          </dt>
          <dd class="govuk-summary-list__value" id="mainPhoneDiv" name="mainPhoneDiv">
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="main-phone-number/main-phone-number-that-we-can-call">Change<span class="govuk-visually-hidden"> main phone number</span></a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Other phone numbers
          </dt>
          <dd class="govuk-summary-list__value">
            <p class="govuk-body">07700 900 457</p>
            <p class="govuk-body">07700 900 000</p>
            <p class="govuk-body">+1 123 1231234</p>
            <p class="govuk-body">020 1234 1234</p>
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="#">Change<span class="govuk-visually-hidden"> other phone numbers</span></a>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>

<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h1 class="govuk-heading-l">Accessibile formats preferences</h1>
      <dl class="govuk-summary-list">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            How we write to customer
          </dt>
          <dd class="govuk-summary-list__value">
    
    
            <p></p>You can contact them by standard letter</p>
    
    
            </ul>
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="/alternative-formats/written-format">
              Change<span class="govuk-visually-hidden">How we write to them </span>
            </a>
          </dd>
        </div>

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            How we speak to customer
          </dt>
          <dd class="govuk-summary-list__value">
    
    
            <p>You can contact them by phone</p>
    
    
            </ul>
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="#">
              Change<span class="govuk-visually-hidden">When we speak to them</span>
            </a>
          </dd>
        </div>

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            When is the best time to contact?
          </dt>
          <dd class="govuk-summary-list__value">
    
    
            <p>Monday to Friday, 9am to 5pm (except bank holidays)</p>
    
    
            </ul>
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="#">
              Change<span class="govuk-visually-hidden">When we speak to them</span>
            </a>
          </dd>
        </div>
    
      </dl>
    </div>
  </div>
  <div class="govuk-button-group">
    {{ govukButton({
      text: "Return to home",
      href: "/round-4/colleague-view/2c/homepage.html"
    }) }}
  </div>
</div>

<script>
var address = sessionStorage.getItem('address');

var newAddressDiv = document.getElementById('newAddressDiv');

if (newAddressDiv) {
  if(address) {
    newAddressDiv.innerHTML = address.replace(/,/g, '<br>');
  } else {
    newAddressDiv.innerHTML = "Same as home address";
  }
}

var phone = sessionStorage.getItem('phone');
var mainPhoneDiv = document.getElementById('mainPhoneDiv');
if (mainPhoneDiv) {
  if(phone) {
    mainPhoneDiv.innerHTML = phone;
  } else {
    mainPhoneDiv.innerHTML = "07700 900 457";
  }
}
</script>


{% endblock %}